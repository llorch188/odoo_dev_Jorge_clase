<odoo>
  <data>

    <!-- List view -->
    <record model="ir.ui.view" id="plato_list_view">
      <field name="name">plato.list</field>
      <field name="model">gestion_restaurante_jorge.plato</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="categoria"/>
          <field name="precio"/>
          <field name="disponible"/>
          <field name="menu_id"/>
        </list>
      </field>
    </record>

    <!-- Form view -->
    <record model="ir.ui.view" id="plato_form_view">
      <field name="name">plato.form</field>
      <field name="model">gestion_restaurante_jorge.plato</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="categoria"/>
              <field name="precio"/>
              <field name="tiempo_preparacion"/>
              <field name="disponible"/>
              <field name="menu_id"/>
              <field name="ingrediente_ids" widget="many2many_tags"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record model="ir.actions.act_window" id="action_plato">
      <field name="name">Platos</field>
      <field name="res_model">gestion_restaurante_jorge.plato</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Menu item -->
    <menuitem
      name="Platos"
      id="menu_platos"
      parent="gestion_restaurante_jorge_menu_config"
      action="action_plato"
    />

  </data>
</odoo>
