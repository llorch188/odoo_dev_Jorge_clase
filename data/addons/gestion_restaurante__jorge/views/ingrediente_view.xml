<odoo>
  <data>

    <!-- List view -->
    <record model="ir.ui.view" id="ingrediente_list_view">
      <field name="name">ingrediente.list</field>
      <field name="model">gestion_restaurante_jorge.ingrediente</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="es_alergeno"/>
        </list>
      </field>
    </record>

    <!-- Form view -->
    <record model="ir.ui.view" id="ingrediente_form_view">
      <field name="name">ingrediente.form</field>
      <field name="model">gestion_restaurante_jorge.ingrediente</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="es_alergeno"/>
              <field name="descripcion"/>
              <field name="plato_ids" widget="many2many_tags"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Action -->
    <record model="ir.actions.act_window" id="action_ingrediente">
      <field name="name">Ingredientes</field>
      <field name="res_model">gestion_restaurante_jorge.ingrediente</field>
      <field name="view_mode">list,form</field>
    </record>

    <!-- Menu item -->
    <menuitem
      name="Ingredientes"
      id="menu_ingredientes"
      parent="gestion_restaurante_jorge_menu_config"
      action="action_ingrediente"
    />

  </data>
</odoo>
